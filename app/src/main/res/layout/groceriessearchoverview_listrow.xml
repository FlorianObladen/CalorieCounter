<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row_groceriessearchoverview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:focusableInTouchMode="true">

    <TextView android:id="@+id/idGroceryName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/textsize"
              android:text="grocery"
              android:layout_centerVertical="true"
              android:paddingTop="@dimen/padding"
              android:layout_marginLeft="@dimen/margin"
              android:textColor="@color/black"/>

    <ImageView android:id="@+id/idSettingButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/padding"
               android:layout_marginRight="@dimen/margin"
               android:layout_centerVertical="true"
               android:layout_toLeftOf="@+id/idDeleteButton"
               android:src="@drawable/settings_32"/>

    <ImageView android:id="@+id/idDeleteButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/padding"
               android:layout_marginRight="@dimen/margin"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:src="@drawable/xmark_32"/>

</RelativeLayout>