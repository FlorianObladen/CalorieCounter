<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:paddingBottom="5sp"
              android:paddingTop="5sp"
              android:weightSum="1"
              android:orientation="horizontal"
              android:focusableInTouchMode="true"
              android:background="@color/white"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:id="@+id/idGroceriesSearchOverviewRow"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="match_parent"
              android:layout_width="0dp"
              android:id="@+id/idGroceriesSearchOverviewGrocery"
              android:gravity="center_vertical"
              android:layout_weight="0.4"
              android:layout_alignParentStart="true"
              android:layout_centerVertical="true"
              android:textColor="@color/black"
              android:text="@string/dailyoverview_grocery"
              android:textSize="@dimen/textsize"/>


    <TextView android:layout_height="match_parent"
              android:layout_width="0dp"
              android:id="@+id/idGroceriesSearchOverviewCalories"
              android:gravity="center_vertical"
              android:layout_weight="0.3"
              android:layout_alignParentStart="true"
              android:layout_centerVertical="true"
              android:textColor="@color/black"
              android:text="30 kcal"
              android:textSize="@dimen/textsize"/>


    <LinearLayout android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:gravity="center_horizontal"
                  android:layout_weight="0.3">

        <ImageView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:id="@+id/idGroceriesSearchOverviewSettingButton"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="@dimen/margin_2"
                   android:src="@drawable/settings_32"
                   android:layout_toLeftOf="@+id/idDailyoverviewDeleteButton"/>

        <ImageView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:id="@+id/idGroceriesSearchOverviewDeleteButton"
                   android:layout_centerVertical="true"
                   android:src="@drawable/xmark_32"
                   android:layout_alignParentRight="true"/>

    </LinearLayout>

</LinearLayout>