<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row_dailyoverview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:focusableInTouchMode="true">

    <TextView android:id="@+id/grocery"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/textsize"
              android:layout_centerVertical="true"
              android:paddingTop="@dimen/padding"
              android:textColor="@color/black"/>

    <ImageView android:id="@+id/copyButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/padding"
               android:layout_toLeftOf="@+id/settingButton"
               android:layout_centerVertical="true"
               android:scaleType="centerCrop"
               android:src="@drawable/copy_32"/>

    <ImageView android:id="@+id/settingButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/padding"
               android:layout_centerVertical="true"
               android:layout_toLeftOf="@+id/deleteButton"
               android:src="@drawable/settings_32"/>

    <ImageView android:id="@+id/deleteButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/padding"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:src="@drawable/xmark_32"/>

</RelativeLayout>