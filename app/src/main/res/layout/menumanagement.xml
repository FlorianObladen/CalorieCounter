<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/menumanagement"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/blue"
              android:padding="@dimen/title_headline"
              android:text="@string/titel"
              android:textSize="@dimen/title_headline"
              android:textColor="@color/white"
              android:gravity="center"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/menumanagement_menumanagement"
              android:textColor="@color/black"
              android:textSize="@dimen/layout_headline"
              android:gravity="center"
              android:textStyle="italic"
              android:layout_margin="@dimen/headlinespace"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="@string/menumanagement_name"
                  android:textSize="@dimen/inputTextSize"
                  android:textColor="@color/black"
                  android:layout_margin="@dimen/margin"/>

        <EditText android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:id="@+id/idMenuManagementSelectMenuName"
                  android:layout_margin="@dimen/margin"
                  android:hint="@string/menumanagement_newNameInput"
                  android:maxLength="32"
                  android:textSize="@dimen/inputTextSize"
                  android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="95dp"
                  android:orientation="horizontal">


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/menumanagement_portion"
                  android:textSize="@dimen/inputTextSize"
                  android:textColor="@color/black"
                  android:layout_margin="@dimen/margin"/>

        <EditText android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/idMenuManagementSelectPortionSize"
                  android:layout_weight="2"
                  android:layout_margin="@dimen/margin"
                  android:text="@string/menumanagement_newPortionInput"
                  android:maxLength="16"
                  android:textSize="@dimen/inputTextSize"
                  android:textColor="@color/black"/>
    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/idMenuManagementAddNewGrocery"
                   android:src="@drawable/plus_32"
                   android:layout_margin="@dimen/margin"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/menumanagement_newGroceryInput"
                      android:textSize="@dimen/layout_headline"
                      android:id="@+id/idMenuManagementAddedGrocery"
                      android:maxLength="32"
                      android:textColor="@color/black"
                      android:layout_margin="@dimen/margin"/>

            <ListView android:layout_width="wrap_content"
                      android:layout_height="392dp"
                      android:background="@color/gray2"
                      android:layout_margin="@dimen/margin_2"
                      android:id="@+id/idMenuMangementList">
            </ListView>
        </LinearLayout>

    </LinearLayout>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menumanagement_addMenu"
            android:id="@+id/idMenuManagementAddMenu"
            android:textSize="@dimen/inputTextSize"
            android:layout_marginRight="@dimen/margin_2"
            android:background="@color/blue"
            android:textColor="@color/black"
            android:layout_gravity="right"
    />
</LinearLayout>
