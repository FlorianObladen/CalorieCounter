<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/idCalendar"
                android:orientation="vertical"
                android:background="@color/white"
                android:weightSum="1">

    <TextView android:id="@+id/idCalendarTitel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/blue"
              android:padding="@dimen/headline"
              android:text="@string/titel"
              android:textSize="@dimen/headline"
              android:textColor="@color/white"
              android:gravity="center"
              android:textStyle="bold"/>

    <Button android:id="@+id/idCalendarTodayButton"
            android:layout_width="fill_parent"
            android:layout_height="80sp"
            android:text="@string/calender_today"
            android:textColor="@color/black"
            android:textSize="@dimen/button_long_textsize"
            android:layout_alignParentBottom="true" android:layout_alignEnd="@+id/idCalendarCalendarView"
            android:layout_alignParentStart="true" android:textStyle="bold" android:typeface="normal"
            android:background="@color/light_gray" android:autoText="true" android:textAllCaps="false"/>
    <CalendarView
            android:id="@+id/idCalendarCalendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showWeekNumber="false"
            android:layout_below="@+id/idCalendarTitel"
            android:layout_alignParentEnd="false" android:layout_above="@+id/idCalendarTodayButton"/>

</RelativeLayout>