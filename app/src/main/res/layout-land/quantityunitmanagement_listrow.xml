<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:id="@+id/rowNewGrocery">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="1">

        <TextView android:layout_width="332dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1.16"
                  android:layout_margin="@dimen/margin"
                  android:text="@string/quantityunitmanagement_discribtion"
                  android:textSize="@dimen/inputTextSize"
                  android:textColor="@color/black" />

        <TextView android:layout_width="332dp"
                  android:layout_height="match_parent"
                  android:text="@string/quantityunitmanagement_discribtion_icons"
                  android:textSize="@dimen/inputTextSize"
                  android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="1">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/quantityunitmanagement_lastadd"
                  android:layout_marginLeft="@dimen/margin"
                  android:layout_marginTop="@dimen/margin"
                  android:id="@+id/idMenuManagementLastAdd"
                  android:textColor="@color/black"
                  android:textSize="@dimen/inputTextSize"
                  android:layout_weight="0.61"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:src="@drawable/settings_32"
                   android:id="@+id/idEditAmountOfGrocery"
                   android:layout_marginLeft="@dimen/margin"
        />

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:id="@+id/idMenuManagementDeleteGrocery"
                   android:src="@drawable/xmark_32"/>
    </LinearLayout>
</LinearLayout>