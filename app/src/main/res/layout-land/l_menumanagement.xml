<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/menumanagement"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white" android:weightSum="1">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/blue"
              android:padding="@dimen/title_headline"
              android:text="@string/titel"
              android:textSize="@dimen/title_headline"
              android:textColor="@color/white"
              android:gravity="center"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="@dimen/title_headline"
                  android:orientation="vertical"
                  android:background="@color/gray">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/menumanagement_menumanagement"
                  android:textColor="@color/black"
                  android:textSize="@dimen/layout_headline"
                  android:gravity="center"
                  android:textStyle="italic"
                  android:layout_margin="@dimen/headlinespace"
        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:text="@string/menumanagement_name"
                      android:textColor="@color/black"
                      android:layout_marginTop="@dimen/margin"
                      android:layout_marginLeft="@dimen/margin"
                      android:layout_marginRight="@dimen/margin"/>

            <EditText android:layout_width="@dimen/inputSize"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:id="@+id/idMenuManagementSelectMenuName"
                      android:layout_marginTop="@dimen/margin"
                      android:layout_marginRight="@dimen/margin"
                      android:hint="@string/menumanagement_newNameInput"
                      android:maxLength="32"
                      android:textSize="@dimen/inputTextSize"
                      android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="95dp"
                      android:orientation="horizontal">


            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:hint="@string/menumanagement_portion"
                      android:textColor="@color/black"
                      android:layout_marginTop="@dimen/margin"
                      android:layout_marginLeft="@dimen/margin"/>

            <EditText android:layout_width="@dimen/inputSize"
                      android:layout_height="wrap_content"
                      android:id="@+id/idMenuManagementSelectPortionSize"
                      android:layout_weight="2"
                      android:layout_marginTop="@dimen/margin"
                      android:layout_marginRight="@dimen/margin"
                      android:hint="@string/menumanagement_newPortionInput"
                      android:maxLength="16"
                      android:textSize="@dimen/inputTextSize"
                      android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="129dp">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/idMenuManagementAddNewGrocery"
                       android:src="@drawable/plus_32"
                       android:layout_margin="@dimen/margin"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">


                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/menumanagement_newGroceryInput"
                          android:textSize="@dimen/layout_headline"
                          android:id="@+id/idMenuManagementAddedGrocery"
                          android:maxLength="32"
                          android:textColor="@color/black"
                          android:layout_margin="@dimen/margin"/>

                <ListView android:layout_width="wrap_content"
                          android:layout_height="127dp"
                          android:id="@+id/idMenuMangementList">
                </ListView>
            </LinearLayout>

        </LinearLayout>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menumanagement_addMenu"
                android:textSize="@dimen/inputTextSize"
                android:id="@+id/idMenuManagementAddMenu"
                android:layout_marginRight="@dimen/margin"
                android:background="@color/blue"
                android:textColor="@color/black"
                android:layout_gravity="right"
        />
    </LinearLayout>
</LinearLayout>